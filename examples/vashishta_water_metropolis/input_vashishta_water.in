# Simulate Vashishta using Metropolis
# sampling and translational moves only

# initialize box
set temp 300.
set boundary stillinger 3.0

# initialize positions
add particles xyz water.xyz
add moleculetype O H H 2.5 1.0 0.0 0.0 0.0 0.577415 -0.816522 0.0 0.577415 0.816522 0.0
set mass H 1.008
set mass O 15.999
set forcefield vashishta H2O.vashishta

# initialize Monte Carlo
set sampler metropolis
add move trans 0.9 0.1
add move avbmcmol 0.1 1.0 3.0
#add move avbmcoutmol 0.01 1.0 3.0
#add move avbmc 0.01 1.0 3.0

# set outputs
thermo 1 mc.log step atoms poteng acceptanceratio
dump 1 mc.xyz x y z

# run Monte Carlo simulation
take snapshot initial.xyz
run mc 10000 1
take snapshot final.xyz
